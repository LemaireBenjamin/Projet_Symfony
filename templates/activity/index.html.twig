{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}
    <div class="titre">
        <div class="left">
            <h1>Liste des sorties</h1>
        </div>
        <div class="right">
            <h6>Date du jour :</h6>
            <h6>Participant :</h6>
        </div>
    </div>
    <div class="filters">
        <div class="left">
            <h6>Filtrer les sorties</h6>
            {{ form_start(form) }}
            {{ form_row(form.site) }}
            {{ form_row(form.name) }}
            {{ form_row(form.startDate) }}
            {{ form_row(form.endDate) }}
            {{ form_row(form.isOrganizer) }}
            {{ form_row(form.isParticipant) }}
            {{ form_row(form.isNotParticipant) }}
            {{ form_row(form.isPast) }}
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
        <div class="right">



        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits / Places</th>
                <th>Etat</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.name }}</td>
                <td>{{ activity.startDate ? activity.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ activity.endDate ? activity.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ activity.participants|length }} / {{ activity.maxInscriptions }}</td>
                <td>{{ activity.status.statusLabel}}</td>
                <td>{{ activity.organizer.firstname }} {{ activity.organizer.lastname }}</td>
                <td>
                    <a href="{{ path('app_activity_show', {'id': activity.id}) }}">Afficher</a>
                    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas d'activité trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_new') }}">Créer une sortie</a>
{% endblock %}
