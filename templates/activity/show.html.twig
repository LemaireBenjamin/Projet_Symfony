{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}

    <div>

        <div>
            <h1>Afficher une sortie</h1>
        </div>

        <div class="d-flex justify-content-center text">

            <div class="row row-cols m-2">

                <div class="m-2 p-2">
                    <label>Nom de la sortie</label>
                    <label>{{ activity.name }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Date et heure de la sortie</label>
                    <label>{{ activity.startDate ? activity.startDate|date('Y-m-d H:i') : '' }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Date limite d'inscription</label>
                    <label>{{ activity.endDate ? activity.endDate|date('Y-m-d H:i') : '' }}</label>
                </div>


                <div class="m-2 p-2">
                    <label>Nombre de places</label>
                    <label>{{ activity.maxInscriptions }}</label>
                </div>


                <div class="m-2 p-2">
                    <label>Durée</label>
                    <label>{{ activity.duration }} minutes</label>
                </div>

                <div class="m-2 p-2">
                    <label>Description et infos</label>
                    <label>{{ activity.description }}</label>
                </div>
            </div>

            <div class="row row-cols">

                <div class="m-2 p-2">
                    <label>Lieu</label>
                    <label>{{ activity.place.placeName }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Rue</label>
                    <label>{{ activity.place.placeStreet }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Ville</label>
                    <label>{{ activity.place.city.cityName }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Code postal</label>
                    <label>{{ activity.place.city.cityName }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Ville</label>
                    <label>{{ activity.place.city.zipcode }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Latitude</label>
                    <label>{{ activity.place.latitude }}</label>
                </div>

                <div class="m-2 p-2">
                    <label>Longitude</label>
                    <label>{{ activity.place.longitude }}</label>
                </div>

            </div>

        </div>


