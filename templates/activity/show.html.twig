{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}

    <div>
        <div>
            <h1>Afficher une sortie</h1>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Nom de la sortie</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Date et heure de la sortie</th>
                <td>{{ activity.startDate ? activity.startDate|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ activity.endDate ? activity.endDate|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Nombres de places</th>
                <td>{{ activity.maxInscriptions }}</td>
            </tr>
            <tr>
                <th>Dur√©e</th>
                <td>{{ activity.duration }} minutes</td>
            </tr>
            <tr>
                <th>Description et infos</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ activity.place.placeName }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ activity.place.placeStreet }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ activity.place.city.cityName }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ activity.place.city.zipcode }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ activity.place.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ activity.place.longitude }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div>
        <div>
            <h2>Liste des participants inscrits :</h2>
        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                {% for participant in activity.participants %}

                    <tr>
                        <td>{{ participant.user.username }}</td>

                        <td>{{ participant.firstname }}  {{ participant.firstname|upper }}</td>
                    </tr>
                {%  endfor %}
                </tbody>
            </table>
        </div>
    </div>




