{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Liste des participants </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Télephone</th>
                <th>Organisateur</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.lastname }}</td>
                <td>{{ participant.firstname }}</td>
                <td>{{ participant.phone }}</td>
                <td>{{ participant.organiser ? 'Yes' : 'No' }}</td>
                <td>{{ participant.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}" class="btn btn-success">Voir</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-warning">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de participants enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_participant_new') }}" class="btn btn-primary">Créer un nouveau</a>
   {% endblock %}
